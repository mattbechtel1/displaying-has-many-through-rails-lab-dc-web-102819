<h1>Seattle Grace Hospital Patient Directory</h1>
<ul>
<table>
    <thead>
        <tr>
            <td>Patient Name</td>
            <td>Appointment Total</td>
        </tr>
    </thead>
    <tbody>
        <% @patients.each do |patient| %>
        <tr>
            <td>Name: <%= patient.name %> </td>
            <td>Number of Appointments: <%= patient.appointments.count %></td>
        </tr>
        <% end %>
    </tbody>
</table>
</ul>